{
  "name": "react-harness",
  "version": "1.0.0",
  "main": "dist/cjs/react-harness.js",
  "module": "dist/es/react-harndess.js",
  "types": "dist/ts/index.d.ts",
  "repository": "git@github.com:jackmellis/react-harness.git",
  "author": "Jack Ellis <jack.ellis@godaddy.com>",
  "license": "MIT",
  "sideEffects": true,
  "scripts": {
    "lint": "eslint --ext .ts,.tsx \"src\" && tsc --noEmit",
    "test": "nyc ava",
    "build:prepare": "rm -rf dist",
    "build:js": "rollup -c",
    "build:ts": "tsc -d --outDir dist/ts --emitDeclarationOnly",
    "build:post": "node ./postbuild-checks.js",
    "build": "yarn build:prepare && yarn build:js && yarn build:ts && yarn build:post",
    "prepublishOnly": "yarn build",
    "storybook": "start-storybook -p 6006 --no-dll",
    "build-storybook": "build-storybook --no-dll"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.11.5",
    "@commitlint/config-conventional": "^9.1.2",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/react": "^6.0.28",
    "@team-griffin/eslint-config": "^3.3.0",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^3.12.1",
    "babel-loader": "^8.1.0",
    "browser-env": "^3.3.0",
    "eslint": "^7.8.1",
    "nyc": "^15.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rollup": "^2.26.9",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^17.1.1",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "dependencies": {}
}
